<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="android:titleTextStyle">@style/TitleStyle.AppTheme</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="TitleStyle.AppTheme" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeanNameText" parent="TitleText">
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <style name="SeparatorDefault">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
    </style>

    <style name="LayoutDefaultNoPadding">
        <item name="android:background">@color/main_bg</item>
    </style>

    <style name="LayoutDefault" parent="@style/LayoutDefaultNoPadding">
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textSize">@dimen/menu_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@color/header_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>

    <style name="ErrorMessage" parent="HeaderTitle">
        <item name="android:background">@color/main_bg</item>
        <item name="android:drawableBottom">@drawable/ic_menu_refresh</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MenuItem">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="MenuHeaderItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/menu_header_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/button_header</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="AddToButton">
        <item name="android:textSize">@dimen/menu_header_text_size</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:layout_margin">@dimen/spacing_medium</item>
    </style>

</resources>
